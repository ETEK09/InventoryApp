@model Inventory

<h2>Tag# @Model.Tag</h2>

<table class="table">

    <tr>
        <th>ProductID</th>
        <th>Tag</th>
        <th>Product Name</th>
        <th>Description</th>
        <th>Date Assigned</th>
        <th>Name</th>
        <th>Custodian</th>
    </tr>

    <tr>
        <td>@Model.ProductID</td>
        <td>@Model.Tag</td>
        <td>@Model.ProductName</td>
        <td>@Model.Description</td>
        <td>@Model.DateAssigned.ToString("d")</td>
        <td>@Model.Dname</td>
        <td>@Model.Custodian</td>
    </tr>

    <div style="display:block">
        <a href="/Inventory/UpdateInventory/@Model.ProductID">Update Item</a>
    </div>

    <div style="display:block">
        @using (Html.BeginForm("DeleteInventory", "Inventory", "Post"))
        {

            <input type="hidden" asp-for="ProductID" value="@Model.ProductID" />

            <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />

        }
    </div>

</table>
