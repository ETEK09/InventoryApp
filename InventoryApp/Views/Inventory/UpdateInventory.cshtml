@model Inventory

<h2>Update @Model.InventoryTag</h2>

<table class= "table">

    @using (Html.BeginForm("UpdateInventoryToDatabase", "Inventory", "Post"))
    {

        <input asp-for="ProductId" type="hidden" value="@Model.ProductId"/>

        <label asp-for="Custodian" class="control-label">Custodian</label>
        <input type="text" name="Custodian" class="form-control" value="@Model.Custodian" />

        <label asp-for="DateAssigned" class="control-label">Date Assigned</label>
        <input type="text" name="DateAssigned" class="form-control" value="@Model.DateAssigned" />
       
        <label asp-for="Distributor" class="control-label">Distributor</label>
        <input type="text" name="Distributor" class="form-control" value="@Model.Distributor" />

        <label asp-for="ProductName" class="control-label">Product Name</label>
        <input type="text" name="ProductName" class="form-control" vale="@Model.ProductName"/>

        <label asp-for="InventoryTag" class="control-label">Inventory Tag</label>
        <input type="text" name="InventoryTag" class="form-control" value="@Model.InventoryTag">

        <input type="submit" value="Update Inventory" class="btn btn-primary" />

    }
</table>